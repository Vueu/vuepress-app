
// 图标
.iconfont{
    font-size: 14.4px !important
}

// 首页背景
.home-blog .hero{
    margin-top:0 !important;
    height: 8vh !important;
}

// 分类题目
.category-item{
    margin: 5px 8px 5px 0 !important; 
}

// 调色板
.navbar .reco-color{
    font-size: 18px !important
}

// 个人联系方式
.social-item{
    margin: 0 5px 0 0 !important
    margin:0 auto !important
}
.social-item .iconfont{
    font-size: 25px !important
}

// 评论输入框
.veditor{
    background :#fff !important;
    min-height:20px !important
}


// 背景音乐
.reco-bgm-box{
    bottom:10px !important;
    height: 50px !important;
}

// 小屏隐藏音乐盒子
@media screen and (max-width:720px){
    .reco-float-box{
        display: none !important; 
    }
}

.reco-bgm-cover{
    height :50px !important;
    width: 50px !important
}

.reco-bgm-info,.reco-bgm-left-box{
    height :50px !important;
    font-size: 12px
}

.reco-bgm-operation{
    font-size: 10px !important
}


// 侧边栏
.side-bar .active,.side-bar .active a{
    background-color:rgb(233, 243, 238)!important
}

.side-bar .active{
    // border-right:2px solid #3eaf7c !important
    border-left:2px solid #3eaf7c !important
}

