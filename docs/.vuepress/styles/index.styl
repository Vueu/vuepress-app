a.sidebar-link{
    background:RGBA(0,0,0,0) !important
}



// 导航栏的下拉框,中屏大屏
@media screen and (min-width:720px){
    .nav-dropdown{
        left:50%;/* 相对根元素定位 */
        transform:translateX(-50%);/* 左移自身宽度50%，垂直方向也一样 */
        width : 100px !important
    }
}


// 置顶标志
.reco-sticky{
    font-size: 40px !important
    color: rgb(234, 135, 78) !important
}


// 弹窗
.bulletin-wrapper{
    left:50%;
    transform:translateX(-50%) translateY(10%);
    width: 30% !important;
}

@media screen and (max-width:720px){
    // 弹窗
    .bulletin-wrapper{
        width: 50% !important;
    }
}


// 个人社交账号
.social-links .reco-github{
    color: #24292F  !important 
}

.social-links .reco-zhihu{
    color:#0066FF !important
}

.social-links .reco-wechat{
    color:rgb(30, 200, 81) !important
}

.social-links .reco-bilibili{
    color:#FF66A6 !important
}


// 友情链接弹窗
.info-wrapper .popup-window{
    // display: none !important
    width: 8rem !important;
}

.info-wrapper .popup-window .logo,.info-wrapper .popup-window .info p{
    display: none !important
}

.friend-link-item:hover{
    transform: scale(1.07)
}

.abstract-item:hover{
    transform: scale(1.02);
}


